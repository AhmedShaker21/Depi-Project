@{
}
@model Course_Lectures

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Add Course</h6>
            <h1 class="mb-5">Create a New Course</h1>
        </div>
        <form asp-action="AddLectureToCourse" asp-controller="Course" method="post" enctype="multipart/form-data">
            <div class="row g-4">
                <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Lecture Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="form-group">
                        <label asp-for="Price" class="form-label"></label>
                        <input asp-for="Price" class="form-control" placeholder="Enter Lecture Price" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 text-center wow fadeInUp" data-wow-delay="0.3s">
                    <button type="submit" class="btn btn-primary py-3 px-5">Add Course</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}
