
@{
    ViewData["Title"] = "AddCourse";
}

<h1>AddCourse</h1>
@model Course
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Add Course</h6>
            <h1 class="mb-5">Create a New Course</h1>
        </div>
        <form asp-action="AddCourse" asp-controller="Course" method="post" enctype="multipart/form-data">
            <div class="row g-4">
                <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="form-group">
                        <label asp-for="Crs_Name" class="form-label"></label>
                        <input asp-for="Crs_Name" class="form-control" placeholder="Enter Course Name" />
                        <span asp-validation-for="Crs_Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="form-group">
                        <label asp-for="Crs_Description" class="form-label"></label>
                        <input asp-for="Crs_Description" class="form-control" placeholder="Enter Instructor Name" />
                        <span asp-validation-for="Crs_Description" class="text-danger"></span>
                    </div>
                </div>
                @*                 <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                <div class="form-group">
                <label asp-for="Crs_Catogery" class="form-label"></label>
                <select asp-for="" class="form-control">
                <option>Select Category</option>
                <option value="Web Design">Web Design</option>
                <option value="Graphic Design">Graphic Design</option>
                <option value="Marketing">Marketing</option>
                <option value="Development">Development</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                </div> *@
                <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="form-group">
                        <label asp-for="Crs_Price" class="form-label"></label>
                        <input asp-for="Crs_Price" class="form-control" placeholder="Enter Course Price" />
                        <span asp-validation-for="Crs_Price" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="form-group">
                        <label asp-for="Crs_Code" class="form-label"></label>
                        <input asp-for="Crs_Code" class="form-control" placeholder="Enter Course Code" />
                        <span asp-validation-for="Crs_Code" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="form-group">
                        <label asp-for="Crs_Cover" class="form-label"></label>
                        <input asp-for="Crs_Cover" type="file" class="form-control" />
                        <span asp-validation-for="Crs_Cover" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 text-center wow fadeInUp" data-wow-delay="0.3s">
                    <button type="submit" class="btn btn-primary py-3 px-5">Add Course</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
