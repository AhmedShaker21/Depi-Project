@model Course_Codes

@{
    // Safely initialize SelectList even if ViewBag.Courses is empty
    var coursesList = ViewBag.Courses as IEnumerable<Course> ?? Enumerable.Empty<Course>();
    SelectList courses = new SelectList(coursesList, "Id", "Crs_Name");
}

<div class="container-xxl py-5">
    <div class="container">
        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger">
                @ViewBag.ErrorMessage
            </div>
        }
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Codes</h6>
            <h1 class="mb-5">Add Code</h1>
        </div>
        <form asp-action="AddCode" asp-controller="Code" method="post" enctype="multipart/form-data">
            <div class="row g-4">
                <!-- Code Input -->
                <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="form-group">
                        <label class="form-label">Code</label>
                        <input type="text" asp-for="Code" class="form-control" placeholder="Enter Code" required />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div>
                </div>

                <!-- Course Dropdown Input -->
                <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="form-group">
                        <label class="form-label">Select Course</label>
                        <select asp-for="CourseId" asp-items="courses" class="form-control">
                            <option value="">-- Select a Course --</option>
                        </select>
                        <span asp-validation-for="CourseId" class="text-danger"></span>
                    </div>
                </div>

                <!-- Submit Button -->
                <div class="col-lg-12 col-md-12 text-center wow fadeInUp" data-wow-delay="0.3s">
                    <button type="submit" class="btn btn-primary py-3 px-5">Submit Code</button>
                </div>
            </div>
        </form>
    </div>
</div>



