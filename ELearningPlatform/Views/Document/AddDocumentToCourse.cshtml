@{
}
@model Lecture_Documents
@{
    ViewData["Title"] = "AddDocumentToCourse";
}

<div class="container-xxl py-5 shadow-lg p-3 mb-5 bg-white rounded">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Add Video</h6>
            <h1 class="mb-5">Create a New Course</h1>
        </div>
        <form asp-action="AddDocumentToCourse" asp-controller="Document" method="post" enctype="multipart/form-data">
            <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                <div class="form-group">
                    <label class="form-label">Document Title</label>
                    <input type="text" name="Title" class="form-control" placeholder="Enter Title" required />
                </div>
            </div>
            <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                <div class="form-group">
                    <label asp-for="Document" class="form-label"></label>
                    <input asp-for="Document" type="file" class="form-control" />
                    <span asp-validation-for="Document" class="text-danger"></span>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 text-center wow fadeInUp" data-wow-delay="0.3s">
                <button type="submit" class="btn btn-primary py-3 px-5">Add Document</button>
            </div>
        </form>
    </div>
</div>