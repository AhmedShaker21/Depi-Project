@{
}
@model IEnumerable<Lecture_Documents>

<div class="container">
    <h2>Documents List</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Title</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var document in Model)
            {
                <tr>
                    <td>@document.Title</td>
                    <td>
                        <a href="@Url.Action("GetDocumentById", "Document", new { id = document.Id })" class="btn btn-primary">
                            Download/View
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
