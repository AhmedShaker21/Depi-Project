@model Course_Lectures

<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">@Model.Name</h6>
            <h1 class="mb-5">Lecture Details</h1>
        </div>

        <div class="accordion" id="accordionExample">

            <!-- Accordion Item 1: Videos -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingOne">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                        Videos <span class="ms-auto me-3">Number of Videos: @Model.Videos.Count</span>
                    </button>
                </h2>
                <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="text-center mt-4">
                            <a asp-action="AddVideoToLecture" asp-controller="Video" asp-route-id="@Model.Id" class="btn btn-primary mb-3">Add Video</a>
                        </div>
                        @foreach (var video in Model.Videos)
                        {
                            <div class="card mb-2">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <span>@video.Title</span>
                                    <div>
                                        <a href="/Video/GetVideoById/@video.Id" class="btn btn-primary">View Video</a>
                                        <a href="/Video/DeleteVideoById/@video.Id" class="btn btn-danger">Delete Video</a>
                                    </div>

                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Accordion Item 2: Documents -->
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Documents <span class="ms-auto me-3">Number of Documents: @Model.Documents.Count</span>
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="text-center mt-4">
                            <a asp-action="AddDocumentToCourse" asp-controller="Document" asp-route-id="@Model.Id" class="btn btn-primary mb-3">Add Document</a>
                        </div>
                        @foreach (var document in Model.Documents)
                        {
                            <div class="card mb-2">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <span>@document.Title</span>
                                    <div>
                                        <a href="/Document/GetDocumentById/@document.Id" class="btn btn-primary">Download Document</a>
                                        <a href="/Document/DeleteDocumentById/@document.Id" class="btn btn-danger">Delete Document</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="accordion-item">
                <h2 class="accordion-header" id="headingTwo">
                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                        Exams <span class="ms-auto me-3">Number of Exams: @Model.Exams.Count</span>
                    </button>
                </h2>
                <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <div class="text-center mt-4">
                            <a asp-action="AddExamToLecture" asp-controller="Exam" asp-route-id="@Model.Id" class="btn btn-primary mb-3">Add Exam</a>
                        </div>
                        @foreach (var exam in Model.Exams)
                        {
                            <div class="card mb-2">
                                <div class="card-body d-flex justify-content-between align-items-center">
                                    <span>@exam.Name</span>
                                    <div>
                                        <a href="/Course/GetExamById/@exam.Id" class="btn btn-primary">View Exam</a>
                                        <a href="/Course/DeleteExamById/@exam.Id" class="btn btn-danger">Delete Exam</a>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>