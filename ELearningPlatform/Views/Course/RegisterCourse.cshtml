@{
}
@model Course
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Register Course</h6>
            <h1 class="mb-5">@Model.Crs_Name</h1>
        </div>
        <form asp-action="RegisterCourse" asp-controller="Course" method="post" enctype="multipart/form-data">
            <div class="row g-4">
                <div class="col-lg-12 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                    <input type="hidden" name="CourseId" value="@Model.Id" />
                    <input type="hidden" name="StudentId" value="@ViewBag.StudentId" />
                    <input type="hidden" name="CourseId" value="@Model.Id" />

                    <div class="form-group">
                        <label for="codename">Course Code</label>
                        <input type="text" id="codename" name="codename" class="form-control" required />
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 text-center wow fadeInUp" data-wow-delay="0.3s">
                    <button type="submit" class="btn btn-primary py-3 px-5">Submit Code</button>
                </div>
            </div>
        </form>
    </div>
</div>
