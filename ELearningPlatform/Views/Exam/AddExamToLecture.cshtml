@model Lecture_Exams
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title bg-white text-center text-primary px-3">Exams</h6>
            <h1 class="mb-5">Create a New Exam</h1>
        </div>
        <form asp-action="AddExamToLecture" asp-controller="Exam" method="post" enctype="multipart/form-data">
            <div class="row g-4">
                <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="form-group">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" placeholder="Enter Lecture Name" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="form-group">
                        <label asp-for="Description" class="form-label"></label>
                        <input asp-for="Description" class="form-control" placeholder="Enter Lecture Description" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-lg-6 col-md-12 wow fadeInUp" data-wow-delay="0.3s">
                    <div class="form-group">
                        <label asp-for="IsPreExam" class="form-label"></label>
                        <select asp-for="IsPreExam" class="form-control">
                            <option value="True">Before</option>
                            <option value="False">After</option>
                        </select>
                        <span asp-validation-for="IsPreExam" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-lg-12 col-md-12 text-center wow fadeInUp" data-wow-delay="0.3s">
                    <button type="submit" class="btn btn-primary py-3 px-5">Add Exam</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}