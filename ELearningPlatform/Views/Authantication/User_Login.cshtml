@{
	Layout = null;
}
@model UserLogin
<link rel="stylesheet" href="/css/SignUp.css">
<div class="Title">
	<h1>E-Learning</h1>
</div>
<div class="container">
	<h1>Sign Up</h1>
	<form asp-action="User_Login" method="post" style="display: flex; flex-direction: column; gap: 5px;">

		<div class="form-group">
			<label for="username">User Name</label>
			<input asp-for="UserName" required />
			<span asp-validation-for="UserName" class="text-danger" style="color:darkred"> </span>
		</div>

		<div class="form-group">
			<label for="email">Email Address</label>
			<input asp-for="Email" required />
			<span asp-validation-for="Email" class="text-danger" style="color:darkred"> </span>
		</div>

		<div class="form-group">
			<label for="password">Password</label>
			<input asp-for="Password" required type="password" />
			<span asp-validation-for="Password" class="text-danger" style="color:darkred"> </span>
		</div>
		<button type="submit">Enter</button>
		<div asp-validation-summary="All" class="text-danger" style="color:darkred"></div>

	</form>
	<partial name="_ValidationScriptsPartial">
</div>
